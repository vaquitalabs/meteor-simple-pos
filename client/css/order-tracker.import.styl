#order-tracker
	background subyl
	border-left 2px solid brdyl
	bottom 0
	box-sizing border-box
	padding 42px
	position fixed
	right 0
	top 67px
	width 490px

	span
		display inline-block
		margin-right -5px
		text-align center
		vertical-align top
		width 16%

	span.product
	span.name
		text-align left
		width 52%

	.step-2
		display none

#empty-order
	text-align center

#order-headings
	border-bottom 2px solid brdyl
	font-weight 700
	line-height 42px


#products-list
	font-size 0.9em
	list-style none
	margin 0
	padding 0

	li + li
		border-top 1px solid brdyl

	li
		line-height 42px
		padding 0 4px

		span
			font-weight 700

		span.name
			font-weight 400

		span.p-unit
		span.p-subtotal

			&:before
				content "$"
				display inline-block
				margin-right 2px
				vertical-align top

#order-total
	border-bottom 2px solid brdyl
	border-top 2px dotted brdyl
	font-weight 700
	line-height 42px
	padding 10px 4px
	position relative

	span
		margin 0
		position absolute
		right 4px
		text-align center
		top 10px
		width 16%

		&:before
			content "$"
			display inline-block
			margin-right 2px
			vertical-align top

#erase-order
	margin 16px 0
	width 100%

#proceed-to-payment
	bottom 42px
	left 42px
	position absolute
	right 42px
